
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebStore</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/bootstrap/bootstrap.js"></script>
    <script src="~/lib/jquery-validation/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script src="~/lib/jquery/jquery.js"></script>

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebStore.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kanit:wght@100&family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,400;1,500;1,600;1,700;1,800&family=Poppins:wght@200&display=swap" rel="stylesheet">

</head>
<body>
    <div class="container">
        <header>
            
                <nav class="navbar navbar-expand-lg navbar-dark fixed-top"
                     aria-label="Ecommerce Shop">
                    <div class="container-xl">
                        <a class="navbar-brand">
                            <img src="/images/fitcomhead.png" asp-controller="Home" asp-action="Index" width="115" height="40" class="d-inline-block align-top mb-2 mt-1"
                                 alt="Logo">
                        </a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                                aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarCollapse">

                            <ul class="navbar-nav">
                              <li class="nav-item">
                                  <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                              </li>
                            <li class="nav-item">
                                <a asp-controller="Product" asp-action="List" class="nav-link">Products</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link">About</a>
                            </li>
                            <li class="nav-item">
                                <a asp-controller="Contact" asp-action="Index" class="nav-link">Contact</a>
                            </li>

                          
                            <div class="login row">
                                <div class="col-4">  <vc:shopping-cart-summary></vc:shopping-cart-summary></div>
                                <div class="col-4">
                                    
                            <li class="nav-item">
                                  <a asp-controller="Home" asp-action="Index" class="nav-link">Login</a>
                            </li>
                    </div>

                    <div class="col-4">
                            <li class="nav-item">
                                <a asp-controller="Product" asp-action="List" class="nav-link">Register</a>
                        </li>
                        
                    </div>
                    </div>
                          
                           
                            </ul>
                        </div>
                    
                    </div>
                </nav>

                </header>



            





    @RenderBody()

  


</body>
</html>